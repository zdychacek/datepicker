input(ng-model="from", name="from", ng-focus="setRangeSelection('from')", date-format="d.M.yyyy")
input(ng-model="to", name="to", ng-focus="setRangeSelection('to')", date-format="d.M.yyyy")

date-picker(
	from="from",
	to="to",
	months-count="3",
	range-selection="currentRangeSelection",
	ng-if="isCalendarVisible",
	disable-future-selection
)