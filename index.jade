html(ng-app="app")
	head
		title Datepicker demo
		link(rel="stylesheet", href="/calendar/calendar.css")
		script(src="/components/angular/angular.min.js")
		script(src="/calendar/calendar.js")
		script(src="/app.js")
	body(ng-controller="AppCtrl")
		div.date-range-selector(date-range-selector, from="from", to="to", on-show-hide="onShowHide")

		input(ng-model="date", date-format="d.M.yyyy")
		date-picker(value="date")