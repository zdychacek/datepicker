!!! 5
html(ng-app="app")
	head
		title Datepicker demo
		link(rel="stylesheet", href="/styles.css")
		script(src="/components/angular/angular.min.js")
		script(src="/datePicker/datePicker.js")
		script(src="/dateRangePicker/dateRangePicker.js")
		script(src="/dateFormat/dateFormat.js")
		script(src="/dateInput/dateInput.js")
		script(src="/app.js")
	body(ng-controller="AppCtrl")
		
		h2 Date range
		div.date-range-selector(date-range-picker, from="from", to="to")

		h2 Dropdown
		div.pos-relative
			input(type="text", date-input, ng-model="date", months-count="1", date-format="d.M.yyyy")

		h2 Static
		div
			span {{date | date: 'd.M.yyyy'}}
			date-picker(value="date")